<%
if (!locals.pageName) {
  locals.pageName = '';
}
%>
<style>
  .navbar .nav-link.active {
    background-color: tomato;
  }
</style>
<div class="container"><nav class="navbar navbar-expand-lg bg-body-tertiary">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">Navbar</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link <%= locals.pageName == "article_list" ? 'active' : '' %> " href="/articles">文章列表</a>
        </li>

      </ul>
      <ul class="navbar-nav mb-2 mb-lg-0">
        <% if(session.admin){ %>
        <li class="nav-item">
          <a class="nav-link"><%= session.admin.nickname %></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" aria-current="page" href="/logout">登出</a>
        </li>
        <% } else { %>
        <li class="nav-item">
          <a class="nav-link" aria-current="page" href="/login">登入</a>
        </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav></div>